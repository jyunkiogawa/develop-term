<div class="topic-index-wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <%= image_tag 'comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <h2 class="topic-author">コメント</h2>
            <% topic.comments.each do |comment| %>
              <p>
                <%= comment.content %>
                <%= link_to "削除", topic_comment_path(topic_id: topic, id: comment), method: :delete %>
              </p>
            <% end %>
            <div class="form-group">
              <%= form_with(model: [topic, @comment], local: true) do |f| %>
                <%= f.text_field :content %>
                <%= f.submit "コメントする", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>